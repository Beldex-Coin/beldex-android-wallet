<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".WalletFragment"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView
        android:id="@+id/ivStreetGunther"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="vertical">

            <ProgressBar
                android:id="@+id/pbProgress"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:indeterminate="true"
                android:visibility="invisible" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/header_top_first"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvProgress"
                    style="@style/MoneroText.Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    tools:text="Synced 1 410 674 blocks" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <androidx.cardview.widget.CardView
                        android:layout_width="20dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        app:cardCornerRadius="20dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="15dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="25dp"
                        app:cardBackgroundColor="@color/greenColor">
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <androidx.cardview.widget.CardView
                                android:id="@+id/fragmentWalletCardView1"
                                android:layout_width="10dp"
                                android:layout_height="10dp"
                                app:cardCornerRadius="100dp"
                                android:layout_gravity="center"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintBottom_toTopOf="@id/fragmentWalletCardView2"
                                app:cardBackgroundColor="@color/textColor"/>
                            <androidx.cardview.widget.CardView
                                android:id="@+id/fragmentWalletCardView2"
                                android:layout_width="10dp"
                                android:layout_height="10dp"
                                app:cardCornerRadius="100dp"
                                android:layout_gravity="center"
                                app:layout_constraintTop_toBottomOf="@id/fragmentWalletCardView1"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintBottom_toTopOf="@id/fragmentWalletCardView3"
                                app:cardBackgroundColor="@color/textColor"/>
                            <androidx.cardview.widget.CardView
                                android:id="@+id/fragmentWalletCardView3"
                                android:layout_width="10dp"
                                android:layout_height="10dp"
                                app:cardCornerRadius="100dp"
                                android:layout_gravity="center"
                                app:layout_constraintTop_toBottomOf="@id/fragmentWalletCardView2"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:cardBackgroundColor="@color/textColor"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="20dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        app:cardCornerRadius="20dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="15dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="25dp"
                        app:cardBackgroundColor="@color/blueColor">
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <androidx.cardview.widget.CardView
                                android:id="@+id/fragmentWalletCardView11"
                                android:layout_width="10dp"
                                android:layout_height="10dp"
                                app:cardCornerRadius="100dp"
                                android:layout_gravity="center"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintBottom_toTopOf="@id/fragmentWalletCardView22"
                                app:cardBackgroundColor="@color/textColor"/>
                            <androidx.cardview.widget.CardView
                                android:id="@+id/fragmentWalletCardView22"
                                android:layout_width="10dp"
                                android:layout_height="10dp"
                                app:cardCornerRadius="100dp"
                                android:layout_gravity="center"
                                app:layout_constraintTop_toBottomOf="@id/fragmentWalletCardView11"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintBottom_toTopOf="@id/fragmentWalletCardView33"
                                app:cardBackgroundColor="@color/textColor"/>
                            <androidx.cardview.widget.CardView
                                android:id="@+id/fragmentWalletCardView33"
                                android:layout_width="10dp"
                                android:layout_height="10dp"
                                app:cardCornerRadius="100dp"
                                android:layout_gravity="center"
                                app:layout_constraintTop_toBottomOf="@id/fragmentWalletCardView22"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:cardBackgroundColor="@color/textColor"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        app:cardBackgroundColor="@color/cardBackgroundColor"
                        app:cardCornerRadius="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_margin="10dp"
                            android:background="@color/cardBackgroundColor">
                            <TextView
                                android:id="@+id/tvWalletName"
                                style="@style/MoneroText.Balance"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="2"
                                android:gravity="start"
                                android:text="--"
                                tools:text="--" />
                            <TextView
                                android:id="@+id/tvWalletAccountStatus"
                                style="@style/MoneroText.Unconfirmed"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:layout_marginTop="8dp"
                                android:gravity="start"
                                android:textColor="@color/greenColor"
                                android:text="--"
                                tools:text="--" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/fragment_wallet_cardView1"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        app:cardBackgroundColor="@color/cardBackgroundColor"
                        app:cardCornerRadius="10dp">

                        <LinearLayout
                            android:id="@+id/llBalance1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:visibility="visible">

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="2">

                                <TextView
                                    android:id="@+id/tvStreetView"
                                    style="@style/MoneroText.Balance"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="@string/menu_streetmode"
                                    android:visibility="invisible" />

                                <LinearLayout
                                    android:id="@+id/llBalance"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="start"
                                    android:orientation="horizontal"
                                    android:visibility="visible">

                                    <FrameLayout
                                        android:id="@+id/flExchange"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_marginStart="8dp"
                                        android:layout_marginEnd="0dp"
                                        android:visibility="gone">

                                        <ImageView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:src="@drawable/ic_statsup" />

                                        <ProgressBar
                                            android:id="@+id/pbExchange"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:indeterminate="true" />
                                    </FrameLayout>

                                    <TextView
                                        android:id="@+id/tvBalance"
                                        style="@style/MoneroText.Balance"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="start"
                                        android:text="1099700.23001"
                                        android:visibility="visible" />

                                    <TextView
                                        android:id="@+id/tvCurrency"
                                        style="@style/MoneroText.Balance"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="8dp"
                                        android:gravity="start"
                                        android:text="BDX"
                                        android:textColor="@color/greenColor"
                                        android:visibility="visible" />

                                    <Spinner
                                        android:id="@+id/sCurrency"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="8dp"
                                        android:entries="@array/currency"
                                        android:gravity="center"
                                        android:visibility="gone"
                                        tools:listitem="@layout/item_spinner_balance" />
                                </LinearLayout>
                            </FrameLayout>

                            <TextView
                                android:id="@+id/tvUnconfirmedAmount"
                                style="@style/MoneroText.Unconfirmed"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:gravity="start"
                                tools:text="+ 0.00 Ledger balance" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>


        <androidx.cardview.widget.CardView
            android:id="@+id/fragment_wallet_cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardBackgroundColor="@color/cardBackgroundColor"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="4dp"
                android:layout_marginBottom="12dp"
                android:background="@color/cardBackgroundColor"
                android:orientation="horizontal"
                android:weightSum="2">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/bSend"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:enabled="false"
                    android:text="@string/label_wallet_send"
                    android:backgroundTint="@color/blueColor"
                    android:transitionName="@string/send_btn_transition_name"
                    app:cornerRadius="5dp"
                    app:icon="@drawable/ic_send_svg" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/bReceive"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:enabled="false"
                    android:text="@string/label_wallet_receive"
                    android:backgroundTint="@color/greenColor"
                    android:transitionName="@string/receive_btn_transition_name"
                    app:cornerRadius="5dp"
                    app:icon="@drawable/ic_receive_svg" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

        <FrameLayout
            android:id="@+id/transaction_history_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/radiusshape"
            app:layout_behavior="com.m2049r.xmrwallet.AnchorSheetBehavior"
            app:behavior_peekHeight="230dp"
            >
            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="10dp"
                app:cardCornerRadius="10dp"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="#000000"
                android:layout_gravity="top|center"/>
            <TextView
                android:id="@+id/tvTransaction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Transactions"
                android:layout_marginTop="30dp"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:layout_marginTop="60dp"
                android:paddingBottom="80dp"
                android:transitionGroup="true"
                app:layoutManager="LinearLayoutManager"
                tools:listitem="@layout/item_transaction" />


        </FrameLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
